 WAP to convert a small letter into capital letter and vice versa

#include <stdio.h>

int main() {
    char ch;

    printf("Enter a character: ");
    scanf("%c", &ch);

    if(ch>='a' && ch<='z'){
        ch = ch - ('a' - 'A');
        printf("%c", ch);
    }
    else if(ch>='A' && ch<='Z'){
        ch = ch + ('a' - 'A');
        printf("%c", ch);
    }
    else{
        printf("Please enter a character");
    }

    return 0;
}
