WAP to double all the elements of a matrix.

#include<stdio.h>

int main(){

    int row;
    int col;
    printf("Enter row number:");
    scanf("%d", &row);
    printf("Enter col number:");
    scanf("%d", &col);

    int arr[row][col];

    for(int i=0; i<row; i++){
        for(int j=0; j<col; j++){
            printf("Elemment[%d][%d]:", i,j);
            scanf("%d", &arr[i][j]);
        }
    }

    for(int i=0; i<row; i++){
        for(int j=0; j<col; j++){
            printf("%d ", 2*arr[i][j]);
        }
        printf("\n");
    }

return 0;
}
